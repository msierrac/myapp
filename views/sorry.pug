extends layout

block content
    .row
        #sidecol.column

        #infocol.column

            #infoBlock
                .heading
                    h2.text-center #{data.gameName}

                    img(src="data:image/png;base64,", style='width:25px;length:26px;padding-top:1px;')
                    p #{data.likes}
                    form(method='POST')
                        button.mt-auto.btn.btn-block.btn-outline-primary(type='submit', id='sorryLikes', size='width:50px;') Like
                p
                    img(src='/images/board/sorry.jpg')

                p(style='whitespace:pre;')
                    img(src="https://img.icons8.com/wired/64/000000/restaurant-table.png", style='width:25px;length:25px;')
                    |  Players: #{data.players}
                p
                    img(src="https://img.icons8.com/wired/64/000000/brainstorm-skill.png", style='width:25px;length:25px;')
                    |  Skills: #{data.skills}
                p
                    img(src="https://img.icons8.com/wired/64/000000/family.png", style='width:25px;length:25px;')
                    |  Age: #{data.age}
                p
                    img(src="https://img.icons8.com/wired/64/000000/cards.png", style='width:25px;length:25px;')
                    |  Cards: #{data.cards}
                p
                    img(src="https://img.icons8.com/wired/64/000000/dice.png", style='width:25px;length:25px;')
                    |  Random Chance: #{data.randomChance}


        #textcol.column
            h3 About
            p #{data.about}

            h3 Official Rules
            p #{data.rules.play}


        #sidecol2.column

        script(src='javascript/client.js')
